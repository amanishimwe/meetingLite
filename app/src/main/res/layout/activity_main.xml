<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting|DashBoard"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/btndate"
        android:layout_width="173dp"
        android:layout_height="119dp"
        android:background="@drawable/date_icon"
        app:srcCompat="@drawable/calender_icon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp"
        android:onClick="ButtonClicked"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:text="Setting Meeting"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="281dp" />

    <Button
        android:id="@+id/btn_calender"
        android:layout_width="151dp"
        android:layout_height="112dp"
        android:background="@drawable/calender_icon"
        app:srcCompat="@drawable/date_icon"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/btnsetmeeting"
        android:layout_width="200dp"
        android:layout_height="134dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/list_icon"
        app:layout_constraintTop_toBottomOf="@+id/btn_calender"
        app:srcCompat="@drawable/list_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeetingLite|SQLiteApp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="676dp" />

</androidx.constraintlayout.widget.ConstraintLayout>